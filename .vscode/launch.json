{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Functions Framework: Launch function A",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/functions-framework",
            "args": [
                "--source=gcp-functionA/gcp_functiona/main.py",
                "--target=listen",
                "--port=8081",
                "--debug"
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {},
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Functions Framework: Launch function B",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/functions-framework",
            "args": [
                "--source=gcp-functionB/gcp_functionb/main.py",
                "--target=listen",
                "--port=8080",
                "--debug"
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {},
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "preLaunchTask": "docker-compose-up"
        },
        {
            "name": "Docker: Python - Flask",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "flask"
            }
        }
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": [
                "Functions Framework: Launch function A",
                "Functions Framework: Launch function B"
            ],
            "preLaunchTask": "${defaultBuildTask}",
            "stopAll": true
        }
    ]
}